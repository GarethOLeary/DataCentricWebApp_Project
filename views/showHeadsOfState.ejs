<style>

table{
        border: 1px solid black;
        border-collapse: collapse;
    }
    th{
        border: 1px solid black;
        background-color: #4CAF50;
  color: white;
    }

    td{
        border: 1px solid black;
       
    }

    tr:nth-child(even) {background-color: #f2f2f2;}

    
a:visited {
  color:blue;
}


a:hover {
  color: red;
}
    
