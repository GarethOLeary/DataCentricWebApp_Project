<h1>Add Country</h1>

<style>
  
  a:visited {
    color:blue;
  }
  
  
  a:hover {
    color: red;
  }
      
  </style>
  
<!--displays the errors-->
<% if(errors != undefined){ %>
  <ul>
      <% errors.forEach((error) => { %>
          <li>
              <%= error.msg %>
          </li><% }) %>
  </ul>
<% } %>

<!--input form to add a head of state-->
<form action="/addCountries" method="POST">
    <label>Country Code</label>
    <input type="text" name="code"><br>
    <label>Country Name</label>
    <input type="text" name="name"><br>
    <label>Country Details</label>
    <textarea id="text" name="details" rows="4" cols="50"></textarea>
    <input type="submit" value="Add">
  </form> 

  <!--links to homepage and previous page-->
  <a href="./">Home Page</a>
  <a href="/listCountries">Previous Page</a>
  